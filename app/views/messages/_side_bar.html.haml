.Side
  .Side__header
    .Side__header__box
      .Side__header__box__name
        = current_user.name
      .Side__header__box__icon
        =link_to new_group_path() do
          = icon('far', 'edit', class: "Side__icon--edit")
        =link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "Side__icon--cog")
  .Side__groups
    .group-list
      - current_user.groups.each do |group|
        .group-box
          = link_to '#' do
            .group-name
              = group.name
